%h1
  Edit project

  = form_for :project, :url => {:controller => 'projects', :action => 'update'}, method: :patch do |f|
    = label_tag :title
    = f.text_field :title
    %br/
    = label_tag :slug
    = f.text_field :slug
    %br/
    = label_tag :description
    = f.text_area :description
    %br/
    = label_tag :previewImages
    = f.file_field :previewImages
    %br/
    = label_tag :images
    = f.file_field :images, multiple: true
    = button_tag 'Submit', type: :submit

= link_to 'Back', '/manage'