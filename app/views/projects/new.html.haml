.new-project-page
  %h1
    New project

  = form_for :project, :url => {:controller => 'projects', :action => 'create'} do |f|
    = label_tag :title
    = f.text_field :title
    %br/
    = label_tag :slug
    = f.text_field :slug
    %br/
    = label_tag :description
    = f.text_area :description
    %br/
    = label_tag :sort_index
    = f.number_field :sort_index
    %br/
    = label_tag :previewImage
    = f.file_field :previewImage
    %br/
    = label_tag :images
    = f.file_field :images, multiple: true
    %br/
    = label_tag :link_name
    = f.text_field :link_name
    %br/
    = label_tag :link_url
    = f.text_field :link_url
    %br/
    = button_tag 'Submit', type: :submit

  .back-link
    = link_to 'Back', '/manage'
